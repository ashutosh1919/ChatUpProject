<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ashu4"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/profile_iv">

            <TextView
                android:id="@+id/nameOfContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ashutosh Hathidara"
                android:layout_alignParentTop="true"
                android:textSize="15dp"
                android:textColor="#000000"
                fontpath="fonts/Montserrat_Regular.ttf"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameOfContact"
                android:id="@+id/statusOfContact"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:text="Exploaring the world of Communication- ChatUp"
                fontpath="fonts/Montserrat_Regular.ttf"
                android:textSize="11dp"
                android:textColor="#616161"/>

            <TextView
                android:id="@+id/number_of_conversation_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="0"
                android:padding="2dp"
                android:background="@drawable/border_curve"
                android:textColor="@color/colorCommonBlue"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>