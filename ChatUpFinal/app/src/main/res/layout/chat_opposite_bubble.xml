<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/constraint_friend_parent"
    android:background="@drawable/chat_received_background"
    android:padding="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="5dp"
    android:minWidth="50dp">

    <TextView
        app:layout_constraintLeft_toLeftOf="@+id/constraint_friend_parent"
        app:layout_constraintTop_toTopOf="@+id/constraint_friend_parent"
        android:id="@+id/received_message_tv"
        android:text="bsvsvsvsvvscvsghvcsgchshbbxjhvcjhcvdcdjcdjvcdsjhcvdshjvcdshvcdscvdsjchvdsjhvcdjvdvcdjmvdchjdcdchvd"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/message_time_tv"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@+id/received_message_tv"
        app:layout_constraintRight_toRightOf="@+id/constraint_friend_parent"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"/>

</android.support.constraint.ConstraintLayout>

