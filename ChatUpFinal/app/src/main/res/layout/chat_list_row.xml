<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_parent"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ashu4"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/profile_iv">

            <TextView
                android:id="@+id/nameOfContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ashutosh Hathidara"
                android:layout_alignParentTop="true"
                android:textSize="15dp"
                android:textColor="#000000"
                fontpath="fonts/Montserrat_Regular.ttf"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameOfContact"
                android:id="@+id/lastMessageTV"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:text="Exploaring the world of Communication- ChatUp"
                fontpath="fonts/Montserrat_Regular.ttf"
                android:textSize="11dp"
                android:textColor="#616161"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/message_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:50"
                    fontpath="fonts/Montserrat_Regular.ttf"
                    android:textSize="9dp"
                    android:textColor="@color/colorProfileMessageBox"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/number_of_messages_received"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_below="@+id/message_time_tv"
                    android:textSize="12dp"
                    android:layout_marginTop="2dp"
                    fontpath="fonts/Montserrat_Regular.ttf"
                    android:background="@drawable/message_recieved_background"
                    android:padding="4dp"
                    android:textColor="@color/colorWhite"
                    android:visibility="gone"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>